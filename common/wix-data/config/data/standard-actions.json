  "sequenceTables": [
    {"name": "InstallExecuteSequence", "description": "Server-side actions during install/uninstall", "context": "Elevated, runs as SYSTEM or Admin"},
    {"name": "InstallUISequence", "description": "Client-side actions during UI mode", "context": "User mode, not elevated"},
    {"name": "AdminExecuteSequence", "description": "Administrative install actions", "context": "Administrative installation"},
    {"name": "AdminUISequence", "description": "Administrative UI actions", "context": "Administrative installation UI"},
    {"name": "AdvtExecuteSequence", "description": "Advertised install actions", "context": "Feature advertisement"}
  ],

  "sequenceRanges": [
    {"range": "1-99", "description": "Early actions like LaunchConditions", "notes": "Run before costing"},
    {"range": "100-499", "description": "Pre-costing actions", "notes": "Property evaluation, searches"},
    {"range": "500-999", "description": "Costing actions", "notes": "CostInitialize through CostFinalize"},
    {"range": "1000-1499", "description": "Pre-transaction setup", "notes": "Validation and preparation"},
    {"range": "1500-1599", "description": "Transaction start", "notes": "InstallInitialize, ProcessComponents"},
