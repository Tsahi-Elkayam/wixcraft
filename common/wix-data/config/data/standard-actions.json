    {"position": "Before InstallFiles", "sequence": 3999, "use": "Pre-file installation prep"},
    {"position": "After InstallFiles", "sequence": 4001, "use": "Post-file installation"},
    {"position": "Before InstallFinalize", "sequence": 6599, "use": "Final installation actions"},
    {"position": "After InstallFinalize", "sequence": 6601, "use": "Post-commit actions (not recommended)"}
  ]
}
