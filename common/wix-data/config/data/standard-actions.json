{
  "_source": "Microsoft MSI SDK, Windows Installer Reference",
  "_url": "https://learn.microsoft.com/en-us/windows/win32/msi/standard-actions-reference",
  "actions": [
    {"name": "AppSearch", "sequence": 50, "description": "Searches for installed applications using signatures", "sequenceTable": "InstallExecuteSequence", "condition": "", "scheduledBefore": "LaunchConditions", "notes": "Uses AppSearch, Signature, DrLocator, RegLocator, IniLocator, CompLocator tables"},
    {"name": "CCPSearch", "sequence": 500, "description": "Searches for qualifying products for Compliance Checking Program", "sequenceTable": "InstallExecuteSequence", "condition": "CCP_TEST", "notes": "Uses CCPSearch, Signature tables"},
    {"name": "RMCCPSearch", "sequence": 600, "description": "Validates application prior to install", "sequenceTable": "InstallExecuteSequence", "condition": "NOT Installed", "notes": "Used with CCPSearch for validation"},
    {"name": "LaunchConditions", "sequence": 100, "description": "Evaluates conditions in LaunchCondition table, fails if any false", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "All conditions must evaluate to true for install to proceed"},
    {"name": "FindRelatedProducts", "sequence": 25, "description": "Runs Upgrade table searches to find related products", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Sets properties from Upgrade table ActionProperty column"},
    {"name": "ValidateProductID", "sequence": 700, "description": "Validates ProductID against PID template", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Uses PIDTemplate property for validation"},

    {"name": "CostInitialize", "sequence": 800, "description": "Initiates internal costing process", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Must run before FileCost and CostFinalize"},
    {"name": "FileCost", "sequence": 900, "description": "Determines disk space cost of installing files", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Runs after CostInitialize, before CostFinalize"},
    {"name": "IsolateComponents", "sequence": 950, "description": "Installs shared components as private to application", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Uses IsolatedComponent table"},
    {"name": "CostFinalize", "sequence": 1000, "description": "Completes costing, determines directory structure", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Final costing step, must run after FileCost"},
    {"name": "SetODBCFolders", "sequence": 1100, "description": "Sets ODBC folder directory locations", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Runs before MigrateFeatureStates"},
    {"name": "MigrateFeatureStates", "sequence": 1200, "description": "Migrates feature states from related product", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Used during major upgrade to preserve user choices"},

    {"name": "InstallValidate", "sequence": 1400, "description": "Verifies disk space availability", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Fails install if insufficient disk space"},
    {"name": "RemoveExistingProducts", "sequence": 1450, "description": "Removes previous versions found by FindRelatedProducts", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Can be scheduled before or after InstallInitialize"},
    {"name": "InstallInitialize", "sequence": 1500, "description": "Marks beginning of installation transaction", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Transaction begins here, rollback enabled"},
    {"name": "AllocateRegistrySpace", "sequence": 1550, "description": "Pre-allocates registry space for installation", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Used for large registry operations"},

    {"name": "ProcessComponents", "sequence": 1600, "description": "Processes Component table, determines install actions", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Core action that determines what gets installed"},
    {"name": "UnpublishComponents", "sequence": 1700, "description": "Removes component publishing information", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Runs during uninstall"},
    {"name": "UnpublishFeatures", "sequence": 1800, "description": "Removes feature publishing information", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Runs during uninstall"},
    {"name": "StopServices", "sequence": 1900, "description": "Stops Windows services marked for removal", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Uses ServiceControl table with Stop=\"install/uninstall/both\""},
    {"name": "DeleteServices", "sequence": 2000, "description": "Deletes Windows services", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Removes services listed in ServiceControl table"},
    {"name": "UnregisterComPlus", "sequence": 2100, "description": "Unregisters COM+ applications", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Uses ComPlusApplication table"},
    {"name": "SelfUnregModules", "sequence": 2200, "description": "Calls DllUnregisterServer for self-reg modules", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Uses SelfReg table"},
    {"name": "UnregisterTypeLibraries", "sequence": 2300, "description": "Unregisters type libraries", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Uses TypeLib table"},
    {"name": "RemoveODBC", "sequence": 2400, "description": "Removes ODBC data sources and drivers", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Uses ODBCDataSource, ODBCDriver tables"},
    {"name": "UnregisterFonts", "sequence": 2500, "description": "Unregisters fonts from system", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Uses Font table"},
    {"name": "RemoveRegistryValues", "sequence": 2600, "description": "Removes registry values from Registry table", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Uses Registry, RemoveRegistry tables"},
    {"name": "UnregisterClassInfo", "sequence": 2700, "description": "Unregisters COM class information", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Uses Class table"},
    {"name": "UnregisterExtensionInfo", "sequence": 2800, "description": "Unregisters file extension associations", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Uses Extension table"},
    {"name": "UnregisterProgIdInfo", "sequence": 2900, "description": "Unregisters ProgId information", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Uses ProgId table"},
    {"name": "UnregisterMIMEInfo", "sequence": 3000, "description": "Unregisters MIME type information", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Uses MIME table"},
    {"name": "RemoveIniValues", "sequence": 3100, "description": "Removes INI file entries", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Uses IniFile, RemoveIniFile tables"},
    {"name": "RemoveShortcuts", "sequence": 3200, "description": "Removes Start Menu and desktop shortcuts", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Uses Shortcut table"},
    {"name": "RemoveEnvironmentStrings", "sequence": 3300, "description": "Removes environment variables", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Uses Environment table"},
    {"name": "RemoveDuplicateFiles", "sequence": 3400, "description": "Removes files created by DuplicateFiles action", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Uses DuplicateFile table"},
    {"name": "RemoveFiles", "sequence": 3500, "description": "Removes files based on File table", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Uses File, RemoveFile tables"},
    {"name": "RemoveFolders", "sequence": 3600, "description": "Removes empty folders", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Uses CreateFolder table"},

    {"name": "CreateFolders", "sequence": 3700, "description": "Creates empty folders specified in CreateFolder table", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Used for directories without files"},
    {"name": "MoveFiles", "sequence": 3800, "description": "Moves files to new locations", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Uses MoveFile table"},
    {"name": "InstallFiles", "sequence": 4000, "description": "Copies files from source to destination", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Core action - uses File, Component, Directory tables"},
    {"name": "DuplicateFiles", "sequence": 4100, "description": "Creates copies of installed files", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Uses DuplicateFile table"},
    {"name": "PatchFiles", "sequence": 4200, "description": "Applies binary patches to files", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Used during patch installation"},
    {"name": "BindImage", "sequence": 4300, "description": "Binds executables to DLLs", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Uses BindImage table for performance optimization"},
    {"name": "CreateShortcuts", "sequence": 4500, "description": "Creates shortcuts in Start Menu and desktop", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Uses Shortcut table"},
    {"name": "RegisterClassInfo", "sequence": 4600, "description": "Registers COM class information", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Uses Class table"},
    {"name": "RegisterExtensionInfo", "sequence": 4700, "description": "Registers file extension associations", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Uses Extension table"},
    {"name": "RegisterProgIdInfo", "sequence": 4800, "description": "Registers ProgId information", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Uses ProgId table"},
    {"name": "RegisterMIMEInfo", "sequence": 4900, "description": "Registers MIME type information", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Uses MIME table"},
    {"name": "WriteRegistryValues", "sequence": 5000, "description": "Writes registry entries from Registry table", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Uses Registry table"},
    {"name": "WriteIniValues", "sequence": 5100, "description": "Writes INI file entries", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Uses IniFile table"},
    {"name": "WriteEnvironmentStrings", "sequence": 5200, "description": "Writes environment variables", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Uses Environment table"},
    {"name": "RegisterFonts", "sequence": 5300, "description": "Registers fonts with Windows", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Uses Font table"},
    {"name": "InstallODBC", "sequence": 5400, "description": "Installs ODBC data sources and drivers", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Uses ODBCDataSource, ODBCDriver, ODBCTranslator tables"},
    {"name": "RegisterTypeLibraries", "sequence": 5500, "description": "Registers type libraries", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Uses TypeLib table"},
    {"name": "SelfRegModules", "sequence": 5600, "description": "Calls DllRegisterServer for self-reg modules", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Uses SelfReg table"},
    {"name": "RegisterComPlus", "sequence": 5700, "description": "Registers COM+ applications", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Uses ComPlusApplication table"},
    {"name": "InstallServices", "sequence": 5800, "description": "Installs Windows services", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Uses ServiceInstall table"},
    {"name": "StartServices", "sequence": 5900, "description": "Starts Windows services marked for start", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Uses ServiceControl table with Start=\"install/uninstall/both\""},
    {"name": "RegisterUser", "sequence": 6000, "description": "Registers user information with installer", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Stores user info for product registration"},
    {"name": "RegisterProduct", "sequence": 6100, "description": "Registers product information with Windows", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Adds product to Add/Remove Programs"},
    {"name": "PublishComponents", "sequence": 6200, "description": "Publishes component information", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Uses PublishComponent table"},
    {"name": "PublishFeatures", "sequence": 6300, "description": "Publishes feature information", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Allows feature state persistence"},
    {"name": "PublishProduct", "sequence": 6400, "description": "Publishes product information", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Enables advertised features"},
    {"name": "ScheduleReboot", "sequence": 6410, "description": "Schedules system reboot at end of install", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Sets REBOOT property to Force"},
    {"name": "ForceReboot", "sequence": 6410, "description": "Forces immediate system reboot", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Immediate reboot, use carefully"},
    {"name": "InstallFinalize", "sequence": 6600, "description": "Commits installation transaction", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Transaction commits, changes permanent"},

    {"name": "DisableRollback", "sequence": 1450, "description": "Disables rollback capability", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Use with caution - no rollback on failure"},
    {"name": "ResolveSource", "sequence": 850, "description": "Resolves source path for files", "sequenceTable": "InstallExecuteSequence", "condition": "NOT Installed", "notes": "Prompts for source if not found"},

    {"name": "MsiPublishAssemblies", "sequence": 5850, "description": "Publishes .NET assemblies to GAC", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Uses MsiAssembly, MsiAssemblyName tables"},
    {"name": "MsiUnpublishAssemblies", "sequence": 1750, "description": "Removes .NET assemblies from GAC", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Uses MsiAssembly table"},
    {"name": "MsiConfigureServices", "sequence": 5850, "description": "Configures service properties", "sequenceTable": "InstallExecuteSequence", "condition": "", "notes": "Uses MsiServiceConfig, MsiServiceConfigFailureActions tables"},

    {"name": "ExecuteAction", "sequence": 1300, "description": "Launches execute sequence from UI sequence", "sequenceTable": "InstallUISequence", "condition": "", "notes": "Bridges UI and Execute sequences"},
    {"name": "InstallAdminPackage", "sequence": 3900, "description": "Copies admin install source files", "sequenceTable": "AdminExecuteSequence", "condition": "", "notes": "Used for administrative installs"}
