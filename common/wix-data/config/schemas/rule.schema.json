{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wixcraft.dev/schemas/rule.json",
  "title": "WiX Lint Rule",
  "description": "Schema for WiX lint rule definitions",
  "type": "object",
  "required": ["id", "category", "severity", "name"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique rule identifier (e.g., COMP001)",
      "pattern": "^[A-Z]+[0-9]+$"
    },
    "category": {
      "type": "string",
      "description": "Rule category",
      "enum": [
        "component",
        "file",
        "directory",
        "feature",
        "property",
        "customaction",
        "registry",
        "service",
        "bundle",
        "package",
        "ui",
        "security",
        "performance",
        "deprecated"
      ]
    },
    "severity": {
      "type": "string",
      "description": "Rule severity level",
      "enum": ["error", "warning", "info"]
    },
    "name": {
      "type": "string",
      "description": "Short rule name"
    },
    "description": {
      "type": "string",
      "description": "Detailed description of what the rule checks"
    },
    "rationale": {
      "type": "string",
      "description": "Why this rule exists and why violations matter"
    },
    "fix_suggestion": {
      "type": "string",
      "description": "How to fix violations of this rule"
    },
    "enabled": {
      "type": "boolean",
      "description": "Whether the rule is enabled by default",
      "default": true
    },
    "auto_fixable": {
      "type": "boolean",
      "description": "Whether violations can be automatically fixed",
      "default": false
    },
    "conditions": {
      "type": "array",
      "description": "Conditions that trigger this rule",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["element", "attribute", "value", "pattern", "relationship"]
          },
          "target": {
            "type": "string"
          },
          "operator": {
            "type": "string",
            "enum": ["exists", "not_exists", "equals", "not_equals", "matches", "contains"]
          },
          "value": {
            "type": "string"
          }
        }
      }
    },
    "tags": {
      "type": "array",
      "description": "Tags for filtering rules",
      "items": {
        "type": "string"
      }
    }
  }
}
