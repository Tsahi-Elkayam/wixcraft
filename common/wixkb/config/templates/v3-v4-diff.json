{
  "$schema": "../schema/version-diff.schema.json",
  "from": "v3",
  "to": "v4",
  "description": "Breaking changes from WiX v3 to v4",
  "changes": [
    {
      "type": "renamed",
      "old": "Product",
      "new": "Package",
      "migration": "Rename Product element to Package"
    },
    {
      "type": "renamed",
      "old": "Bundle",
      "new": "Bundle",
      "notes": "Bundle element now uses Package for embedded MSI"
    },
    {
      "type": "removed",
      "element": "TARGETDIR",
      "migration": "Use StandardDirectory element instead"
    },
    {
      "type": "removed",
      "attribute": "Directory@FileSource",
      "migration": "Use source path on File elements"
    },
    {
      "type": "added",
      "element": "StandardDirectory",
      "description": "Represents well-known Windows directories"
    },
    {
      "type": "added",
      "element": "Files",
      "description": "Wildcard file harvesting element"
    },
    {
      "type": "changed",
      "element": "Component",
      "attribute": "Guid",
      "notes": "Guid=\"*\" is now recommended over explicit GUIDs"
    },
    {
      "type": "changed",
      "element": "MajorUpgrade",
      "notes": "Now added automatically if not specified"
    },
    {
      "type": "namespace",
      "old": "http://schemas.microsoft.com/wix/2006/wi",
      "new": "http://wixtoolset.org/schemas/v4/wxs"
    }
  ]
}
