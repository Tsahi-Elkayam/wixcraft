{
  "$schema": "../schema/element.schema.json",
  "name": "FeatureGroup",
  "namespace": "wix",
  "since": "v3",
  "description": "A group of features that can be referenced together.",
  "documentation": "https://wixtoolset.org/docs/schema/wxs/featuregroup/",
  "parents": ["Fragment"],
  "children": ["Component", "ComponentRef", "ComponentGroupRef", "Feature", "FeatureRef", "FeatureGroupRef", "MergeRef"],
  "attributes": {
    "Id": {
      "type": "identifier",
      "required": true,
      "description": "Unique identifier for the feature group."
    }
  },
  "examples": [
    {
      "description": "Feature group with components",
      "code": "<FeatureGroup Id=\"OptionalFeatures\">\n  <Feature Id=\"Docs\" Title=\"Documentation\" />\n  <Feature Id=\"Samples\" Title=\"Samples\" />\n</FeatureGroup>"
    }
  ]
}
