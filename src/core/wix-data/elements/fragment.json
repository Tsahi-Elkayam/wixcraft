{
  "$schema": "../schema/element.schema.json",
  "name": "Fragment",
  "namespace": "wix",
  "since": "v3",
  "description": "A fragment is an atomic unit of authoring that can be shared between different WiX source files.",
  "documentation": "https://wixtoolset.org/docs/schema/wxs/fragment/",
  "parents": ["Wix", "Include"],
  "children": [
    "Component",
    "ComponentGroup",
    "CustomAction",
    "Directory",
    "DirectoryRef",
    "Feature",
    "FeatureGroup",
    "Property",
    "PropertyRef",
    "UI",
    "Binary"
  ],
  "attributes": {
    "Id": {
      "type": "identifier",
      "required": false,
      "description": "Optional identifier for the fragment."
    }
  },
  "examples": [
    {
      "description": "Fragment with component group",
      "code": "<Fragment>\n  <ComponentGroup Id=\"ProductComponents\">\n    <Component Directory=\"INSTALLFOLDER\">\n      <File Source=\"app.exe\" />\n    </Component>\n  </ComponentGroup>\n</Fragment>"
    }
  ]
}
