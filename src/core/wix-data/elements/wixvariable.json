{
  "$schema": "../schema/element.schema.json",
  "name": "WixVariable",
  "namespace": "wix",
  "since": "v3",
  "description": "Defines a WiX preprocessor variable that can be overridden at build time.",
  "documentation": "https://wixtoolset.org/docs/schema/wxs/wixvariable/",
  "parents": ["Package", "Module", "Fragment", "Bundle"],
  "children": [],
  "attributes": {
    "Id": {
      "type": "identifier",
      "required": true,
      "description": "Name of the variable."
    },
    "Value": {
      "type": "string",
      "required": true,
      "description": "Value of the variable."
    },
    "Overridable": {
      "type": "yesno",
      "required": false,
      "default": "no",
      "description": "Whether the variable can be overridden with -d on command line."
    }
  },
  "examples": [
    {
      "description": "Define source directory variable",
      "code": "<WixVariable Id=\"SourceDir\" Value=\"..\\build\\output\" Overridable=\"yes\" />"
    }
  ]
}
