{
  "$schema": "../schema/element.schema.json",
  "name": "Chain",
  "namespace": "wix",
  "since": "v3",
  "description": "Contains the packages to install in a bundle.",
  "documentation": "https://wixtoolset.org/docs/schema/wxs/chain/",
  "parents": ["Bundle"],
  "children": [
    "MsiPackage",
    "MspPackage",
    "MsuPackage",
    "ExePackage",
    "BundlePackage",
    "PackageGroupRef",
    "RollbackBoundary"
  ],
  "attributes": {
    "DisableRollback": {
      "type": "yesno",
      "required": false,
      "default": "no",
      "description": "Whether to disable rollback on failure."
    },
    "DisableSystemRestore": {
      "type": "yesno",
      "required": false,
      "default": "no",
      "description": "Whether to disable system restore point creation."
    },
    "ParallelCache": {
      "type": "yesno",
      "required": false,
      "default": "no",
      "description": "Whether to cache packages in parallel."
    }
  },
  "examples": [
    {
      "description": "Chain with multiple packages",
      "code": "<Chain>\n  <ExePackage SourceFile=\"prereq.exe\" DetectCondition=\"...\" />\n  <MsiPackage SourceFile=\"product.msi\" />\n</Chain>"
    }
  ]
}
