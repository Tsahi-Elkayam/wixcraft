{
  "$schema": "../schema/element.schema.json",
  "name": "ExePackage",
  "namespace": "wix",
  "since": "v3",
  "description": "An executable package to run as part of a bundle chain.",
  "documentation": "https://wixtoolset.org/docs/schema/wxs/exepackage/",
  "parents": ["Chain", "PackageGroup"],
  "children": ["CommandLine", "ExitCode", "Payload", "PayloadGroupRef"],
  "attributes": {
    "Id": {
      "type": "identifier",
      "required": false,
      "description": "Unique identifier for the package."
    },
    "SourceFile": {
      "type": "path",
      "required": true,
      "description": "Path to the executable file."
    },
    "Name": {
      "type": "string",
      "required": false,
      "description": "Display name for the package."
    },
    "DownloadUrl": {
      "type": "string",
      "required": false,
      "description": "URL to download the package from."
    },
    "InstallCondition": {
      "type": "string",
      "required": false,
      "description": "Condition for installing the package."
    },
    "DetectCondition": {
      "type": "string",
      "required": false,
      "description": "Condition that determines if the package is already installed."
    },
    "InstallArguments": {
      "type": "string",
      "required": false,
      "description": "Command line arguments for installation."
    },
    "UninstallArguments": {
      "type": "string",
      "required": false,
      "description": "Command line arguments for uninstallation."
    },
    "RepairArguments": {
      "type": "string",
      "required": false,
      "description": "Command line arguments for repair."
    },
    "Cache": {
      "type": "enum",
      "required": false,
      "values": ["always", "yes", "no", "remove"],
      "default": "yes",
      "description": "Whether to cache the package."
    },
    "Permanent": {
      "type": "yesno",
      "required": false,
      "default": "no",
      "description": "Whether to leave the package installed."
    },
    "Vital": {
      "type": "yesno",
      "required": false,
      "default": "yes",
      "description": "Whether failure fails the bundle."
    },
    "PerMachine": {
      "type": "yesno",
      "required": false,
      "default": "yes",
      "description": "Whether the package is per-machine."
    }
  },
  "examples": [
    {
      "description": "Executable prerequisite",
      "code": "<ExePackage Id=\"DotNetCore\" SourceFile=\"dotnet-runtime.exe\" InstallArguments=\"/quiet\" DetectCondition=\"DotNetInstalled\" />"
    }
  ]
}
