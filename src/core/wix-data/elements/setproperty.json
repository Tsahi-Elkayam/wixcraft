{
  "$schema": "../schema/element.schema.json",
  "name": "SetProperty",
  "namespace": "wix",
  "since": "v4",
  "description": "Sets a property value, replacing the need for a SetProperty custom action.",
  "documentation": "https://wixtoolset.org/docs/schema/wxs/setproperty/",
  "parents": ["Package", "Fragment"],
  "children": [],
  "attributes": {
    "Id": {
      "type": "identifier",
      "required": true,
      "description": "The property to set."
    },
    "Value": {
      "type": "string",
      "required": true,
      "description": "The value to set."
    },
    "After": {
      "type": "string",
      "required": false,
      "description": "Action after which to set the property."
    },
    "Before": {
      "type": "string",
      "required": false,
      "description": "Action before which to set the property."
    },
    "Sequence": {
      "type": "enum",
      "required": false,
      "values": ["execute", "ui", "both", "first"],
      "default": "both",
      "description": "Which sequence to set the property in."
    },
    "Condition": {
      "type": "string",
      "required": false,
      "description": "Condition for setting the property."
    }
  },
  "examples": [
    {
      "description": "Set install folder based on architecture",
      "code": "<SetProperty Id=\"INSTALLFOLDER\" Value=\"[ProgramFiles64Folder]MyApp\" Before=\"CostInitialize\" Condition=\"VersionNT64\" Sequence=\"first\" />"
    }
  ]
}
