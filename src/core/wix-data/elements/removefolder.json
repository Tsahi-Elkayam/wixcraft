{
  "$schema": "../schema/element.schema.json",
  "name": "RemoveFolder",
  "namespace": "wix",
  "since": "v3",
  "description": "Removes a folder during installation or uninstallation.",
  "documentation": "https://wixtoolset.org/docs/schema/wxs/removefolder/",
  "parents": ["Component"],
  "children": [],
  "attributes": {
    "Id": {
      "type": "identifier",
      "required": true,
      "description": "Unique identifier for the remove action."
    },
    "Directory": {
      "type": "identifier",
      "required": false,
      "description": "Directory to remove. Defaults to parent directory."
    },
    "On": {
      "type": "enum",
      "required": true,
      "values": ["install", "uninstall", "both"],
      "description": "When to remove the folder."
    }
  },
  "msiTables": ["RemoveFile"],
  "examples": [
    {
      "description": "Remove application folder on uninstall",
      "code": "<RemoveFolder Id=\"RemoveAppFolder\" Directory=\"INSTALLFOLDER\" On=\"uninstall\" />"
    }
  ]
}
