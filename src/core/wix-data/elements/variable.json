{
  "$schema": "../schema/element.schema.json",
  "name": "Variable",
  "namespace": "wix",
  "since": "v3",
  "description": "Defines a Burn engine variable for use in bundle conditions.",
  "documentation": "https://wixtoolset.org/docs/schema/wxs/variable/",
  "parents": ["Bundle", "Fragment"],
  "children": [],
  "attributes": {
    "Name": {
      "type": "string",
      "required": true,
      "description": "Name of the variable."
    },
    "Value": {
      "type": "string",
      "required": false,
      "description": "Default value of the variable."
    },
    "Type": {
      "type": "enum",
      "required": false,
      "values": ["formatted", "numeric", "string", "version"],
      "default": "string",
      "description": "Type of the variable."
    },
    "Persisted": {
      "type": "yesno",
      "required": false,
      "default": "no",
      "description": "Whether to persist the variable across runs."
    },
    "Hidden": {
      "type": "yesno",
      "required": false,
      "default": "no",
      "description": "Whether to hide the variable in logs."
    },
    "Overridable": {
      "type": "yesno",
      "required": false,
      "default": "no",
      "description": "Whether the variable can be overridden from command line."
    }
  },
  "examples": [
    {
      "description": "Define installation path variable",
      "code": "<Variable Name=\"InstallFolder\" Type=\"string\" Value=\"[ProgramFilesFolder]MyApp\" Overridable=\"yes\" />"
    }
  ]
}
