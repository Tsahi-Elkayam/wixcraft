{
  "$schema": "../schema/element.schema.json",
  "name": "StandardDirectory",
  "namespace": "wix",
  "since": "v4",
  "description": "References a well-known Windows directory like ProgramFilesFolder, replacing the need for TARGETDIR.",
  "documentation": "https://wixtoolset.org/docs/schema/wxs/standarddirectory/",
  "parents": ["Package", "Module", "Fragment"],
  "children": ["Component", "Directory", "File", "Merge"],
  "attributes": {
    "Id": {
      "type": "enum",
      "required": true,
      "values": [
        "ProgramFilesFolder",
        "ProgramFiles64Folder",
        "ProgramFiles6432Folder",
        "CommonFilesFolder",
        "CommonFiles64Folder",
        "SystemFolder",
        "System64Folder",
        "WindowsFolder",
        "TempFolder",
        "AppDataFolder",
        "LocalAppDataFolder",
        "ProgramMenuFolder",
        "DesktopFolder",
        "StartMenuFolder",
        "StartupFolder",
        "FontsFolder",
        "PersonalFolder",
        "SendToFolder",
        "AdminToolsFolder"
      ],
      "description": "The well-known directory identifier."
    }
  },
  "examples": [
    {
      "description": "Create installation folder under Program Files",
      "code": "<StandardDirectory Id=\"ProgramFilesFolder\">\n  <Directory Id=\"INSTALLFOLDER\" Name=\"MyApp\" />\n</StandardDirectory>"
    }
  ]
}
