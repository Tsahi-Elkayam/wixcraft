{
  "$schema": "../schema/element.schema.json",
  "name": "BootstrapperApplicationRef",
  "namespace": "wix",
  "since": "v3",
  "description": "References a predefined bootstrapper application.",
  "documentation": "https://wixtoolset.org/docs/schema/wxs/bootstrapperapplicationref/",
  "parents": ["Bundle"],
  "children": ["Payload", "PayloadGroupRef"],
  "attributes": {
    "Id": {
      "type": "identifier",
      "required": true,
      "description": "The identifier of the bootstrapper application to reference."
    }
  },
  "commonValues": [
    "WixStandardBootstrapperApplication.RtfLicense",
    "WixStandardBootstrapperApplication.HyperlinkLicense",
    "WixStandardBootstrapperApplication.HyperlinkSidebarLicense",
    "WixStandardBootstrapperApplication.RtfLargeLicense",
    "WixStandardBootstrapperApplication.HyperlinkLargeLicense"
  ],
  "examples": [
    {
      "description": "Use standard WiX bootstrapper",
      "code": "<BootstrapperApplicationRef Id=\"WixStandardBootstrapperApplication.RtfLicense\">\n  <Payload SourceFile=\"license.rtf\" />\n</BootstrapperApplicationRef>"
    }
  ]
}
