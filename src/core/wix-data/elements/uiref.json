{
  "$schema": "../schema/element.schema.json",
  "name": "UIRef",
  "namespace": "wix",
  "since": "v3",
  "description": "References a predefined UI library like WixUI_Minimal or WixUI_InstallDir.",
  "documentation": "https://wixtoolset.org/docs/schema/wxs/uiref/",
  "parents": ["Package", "Module", "Fragment", "UI"],
  "children": [],
  "attributes": {
    "Id": {
      "type": "identifier",
      "required": true,
      "description": "The identifier of the UI to reference."
    }
  },
  "commonValues": [
    "WixUI_Minimal",
    "WixUI_InstallDir",
    "WixUI_FeatureTree",
    "WixUI_Mondo",
    "WixUI_Advanced"
  ],
  "examples": [
    {
      "description": "Use the minimal UI",
      "code": "<UIRef Id=\"WixUI_Minimal\" />"
    },
    {
      "description": "Use install directory UI",
      "code": "<UIRef Id=\"WixUI_InstallDir\" />"
    }
  ]
}
