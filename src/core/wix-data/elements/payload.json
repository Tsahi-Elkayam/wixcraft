{
  "$schema": "../schema/element.schema.json",
  "name": "Payload",
  "namespace": "wix",
  "since": "v3",
  "description": "A file to include in a bundle or package.",
  "documentation": "https://wixtoolset.org/docs/schema/wxs/payload/",
  "parents": ["BootstrapperApplication", "BootstrapperApplicationRef", "ExePackage", "MsiPackage", "MspPackage", "MsuPackage", "BundlePackage", "PayloadGroup"],
  "children": [],
  "attributes": {
    "Id": {
      "type": "identifier",
      "required": false,
      "description": "Unique identifier for the payload."
    },
    "SourceFile": {
      "type": "path",
      "required": true,
      "description": "Path to the source file."
    },
    "Name": {
      "type": "string",
      "required": false,
      "description": "Name of the file in the bundle."
    },
    "DownloadUrl": {
      "type": "string",
      "required": false,
      "description": "URL to download the payload from."
    },
    "Compressed": {
      "type": "yesno",
      "required": false,
      "description": "Whether to compress the payload."
    }
  },
  "examples": [
    {
      "description": "License file payload",
      "code": "<Payload SourceFile=\"license.rtf\" Name=\"license.rtf\" />"
    }
  ]
}
