{
  "$schema": "../schema/element.schema.json",
  "name": "Directory",
  "namespace": "wix",
  "since": "v3",
  "description": "Represents a directory structure on the target machine. Directories can be nested and contain components.",
  "documentation": "https://wixtoolset.org/docs/schema/wxs/directory/",
  "parents": ["Directory", "DirectoryRef", "Package", "Module", "Fragment", "StandardDirectory"],
  "children": ["Component", "Directory", "File", "Merge"],
  "attributes": {
    "Id": {
      "type": "identifier",
      "required": true,
      "description": "Unique identifier for the directory."
    },
    "Name": {
      "type": "filename",
      "required": false,
      "description": "The name of the directory on the target machine."
    },
    "FileSource": {
      "type": "path",
      "required": false,
      "description": "Source path for files in this directory."
    }
  },
  "msiTables": ["Directory"],
  "rules": [
    "directory-valid-name"
  ],
  "examples": [
    {
      "description": "Nested directory structure",
      "code": "<Directory Id=\"INSTALLFOLDER\" Name=\"MyApp\">\n  <Directory Id=\"BinFolder\" Name=\"bin\" />\n</Directory>"
    }
  ]
}
