{
  "$schema": "../schema/element.schema.json",
  "name": "ServiceInstall",
  "namespace": "wix",
  "since": "v3",
  "description": "Installs a Windows service.",
  "documentation": "https://wixtoolset.org/docs/schema/wxs/serviceinstall/",
  "parents": ["Component"],
  "children": ["ServiceDependency", "ServiceConfig", "PermissionEx"],
  "attributes": {
    "Id": {
      "type": "identifier",
      "required": false,
      "description": "Unique identifier for the service."
    },
    "Name": {
      "type": "string",
      "required": true,
      "description": "The service name (as shown in services.msc)."
    },
    "DisplayName": {
      "type": "string",
      "required": false,
      "description": "The display name of the service."
    },
    "Description": {
      "type": "string",
      "required": false,
      "description": "Description of the service."
    },
    "Start": {
      "type": "enum",
      "required": true,
      "values": ["auto", "demand", "disabled", "boot", "system"],
      "description": "When the service should start."
    },
    "Type": {
      "type": "enum",
      "required": false,
      "values": ["ownProcess", "shareProcess", "kernelDriver", "systemDriver"],
      "default": "ownProcess",
      "description": "The type of service."
    },
    "ErrorControl": {
      "type": "enum",
      "required": false,
      "values": ["ignore", "normal", "critical"],
      "default": "normal",
      "description": "How to handle service startup errors."
    },
    "Account": {
      "type": "string",
      "required": false,
      "description": "Account under which the service runs."
    },
    "Password": {
      "type": "string",
      "required": false,
      "description": "Password for the service account."
    },
    "Interactive": {
      "type": "yesno",
      "required": false,
      "default": "no",
      "description": "Whether the service can interact with the desktop."
    },
    "Vital": {
      "type": "yesno",
      "required": false,
      "default": "yes",
      "description": "If yes, failure to install the service fails the installation."
    }
  },
  "msiTables": ["ServiceInstall"],
  "examples": [
    {
      "description": "Auto-start Windows service",
      "code": "<ServiceInstall Id=\"MyService\" Name=\"MyAppService\" DisplayName=\"My App Service\" Start=\"auto\" Type=\"ownProcess\" ErrorControl=\"normal\" />"
    }
  ]
}
