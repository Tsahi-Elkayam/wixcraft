{
  "$schema": "../schema/element.schema.json",
  "name": "UI",
  "namespace": "wix",
  "since": "v3",
  "description": "Contains UI elements for the installer.",
  "documentation": "https://wixtoolset.org/docs/schema/wxs/ui/",
  "parents": ["Package", "Module", "Fragment"],
  "children": [
    "Dialog",
    "DialogRef",
    "Error",
    "ProgressText",
    "TextStyle",
    "UIText",
    "Property",
    "Binary",
    "InstallUISequence",
    "AdminUISequence"
  ],
  "attributes": {
    "Id": {
      "type": "identifier",
      "required": false,
      "description": "Optional identifier for the UI definition."
    }
  },
  "examples": [
    {
      "description": "Basic UI container",
      "code": "<UI>\n  <UIRef Id=\"WixUI_Minimal\" />\n</UI>"
    }
  ]
}
