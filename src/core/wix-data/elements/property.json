{
  "$schema": "../schema/element.schema.json",
  "name": "Property",
  "namespace": "wix",
  "since": "v3",
  "description": "Defines a Windows Installer property.",
  "documentation": "https://wixtoolset.org/docs/schema/wxs/property/",
  "parents": ["Package", "Module", "Fragment"],
  "children": ["DirectorySearch", "ComponentSearch", "FileSearch", "RegistrySearch", "IniFileSearch", "ProductSearch"],
  "attributes": {
    "Id": {
      "type": "identifier",
      "required": true,
      "description": "The property name. Use UPPERCASE for public properties."
    },
    "Value": {
      "type": "string",
      "required": false,
      "description": "Initial value of the property."
    },
    "Secure": {
      "type": "yesno",
      "required": false,
      "default": "no",
      "description": "Whether the property can be passed on the command line."
    },
    "Hidden": {
      "type": "yesno",
      "required": false,
      "default": "no",
      "description": "Whether to hide the property value in logs."
    },
    "Admin": {
      "type": "yesno",
      "required": false,
      "default": "no",
      "description": "Whether this property is used in administrative installations."
    }
  },
  "msiTables": ["Property"],
  "examples": [
    {
      "description": "Public property with default value",
      "code": "<Property Id=\"INSTALLLEVEL\" Value=\"100\" />"
    },
    {
      "description": "Secure property for command line",
      "code": "<Property Id=\"INSTALLDIR\" Secure=\"yes\" />"
    }
  ]
}
