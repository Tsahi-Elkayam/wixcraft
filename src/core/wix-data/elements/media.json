{
  "$schema": "../schema/element.schema.json",
  "name": "Media",
  "namespace": "wix",
  "since": "v3",
  "description": "Defines a media cabinet for storing files.",
  "documentation": "https://wixtoolset.org/docs/schema/wxs/media/",
  "parents": ["Package", "Module"],
  "children": ["PatchBaseline"],
  "attributes": {
    "Id": {
      "type": "integer",
      "required": true,
      "description": "Unique numeric identifier for the media."
    },
    "Cabinet": {
      "type": "string",
      "required": false,
      "description": "Name of the cabinet file."
    },
    "CompressionLevel": {
      "type": "enum",
      "required": false,
      "values": ["none", "low", "medium", "high", "mszip"],
      "default": "medium",
      "description": "Compression level for the cabinet."
    },
    "EmbedCab": {
      "type": "yesno",
      "required": false,
      "default": "no",
      "description": "Whether to embed the cabinet in the MSI."
    },
    "DiskPrompt": {
      "type": "string",
      "required": false,
      "description": "Prompt displayed if disk is required."
    },
    "VolumeLabel": {
      "type": "string",
      "required": false,
      "description": "Volume label for the disk."
    }
  },
  "msiTables": ["Media"],
  "examples": [
    {
      "description": "Embedded cabinet",
      "code": "<Media Id=\"1\" Cabinet=\"product.cab\" EmbedCab=\"yes\" CompressionLevel=\"high\" />"
    }
  ]
}
