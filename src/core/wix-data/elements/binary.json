{
  "$schema": "../schema/element.schema.json",
  "name": "Binary",
  "namespace": "wix",
  "since": "v3",
  "description": "Embeds a binary file in the MSI for use by custom actions.",
  "documentation": "https://wixtoolset.org/docs/schema/wxs/binary/",
  "parents": ["Package", "Module", "Fragment"],
  "children": [],
  "attributes": {
    "Id": {
      "type": "identifier",
      "required": true,
      "description": "Unique identifier for the binary."
    },
    "SourceFile": {
      "type": "path",
      "required": true,
      "description": "Path to the binary file to embed."
    }
  },
  "msiTables": ["Binary"],
  "examples": [
    {
      "description": "Embed a DLL for custom actions",
      "code": "<Binary Id=\"CustomActionDll\" SourceFile=\"CustomActions.dll\" />"
    }
  ]
}
