{
  "$schema": "../schema/element.schema.json",
  "name": "Bundle",
  "namespace": "wix",
  "since": "v3",
  "description": "Root element for a Burn bootstrapper that chains multiple packages together.",
  "documentation": "https://wixtoolset.org/docs/schema/wxs/bundle/",
  "parents": ["Wix"],
  "children": [
    "BootstrapperApplication",
    "BootstrapperApplicationRef",
    "Chain",
    "Container",
    "ContainerRef",
    "Log",
    "OptionalUpdateRegistration",
    "PayloadGroup",
    "PayloadGroupRef",
    "RelatedBundle",
    "Requires",
    "SetVariable",
    "SoftwareTag",
    "Update",
    "Variable",
    "WixVariable"
  ],
  "attributes": {
    "Name": {
      "type": "string",
      "required": true,
      "description": "The name of the bundle."
    },
    "Version": {
      "type": "version",
      "required": true,
      "description": "The version of the bundle."
    },
    "Manufacturer": {
      "type": "string",
      "required": true,
      "description": "The manufacturer of the bundle."
    },
    "UpgradeCode": {
      "type": "guid",
      "required": true,
      "description": "The upgrade code for the bundle."
    },
    "AboutUrl": {
      "type": "string",
      "required": false,
      "description": "URL for more information about the product."
    },
    "Compressed": {
      "type": "yesno",
      "required": false,
      "default": "yes",
      "description": "Whether to compress the bundle."
    },
    "DisableModify": {
      "type": "yesno",
      "required": false,
      "default": "no",
      "description": "Whether to disable modify in ARP."
    },
    "DisableRemove": {
      "type": "yesno",
      "required": false,
      "default": "no",
      "description": "Whether to disable remove in ARP."
    },
    "DisableRepair": {
      "type": "yesno",
      "required": false,
      "default": "no",
      "description": "Whether to disable repair in ARP."
    },
    "HelpUrl": {
      "type": "string",
      "required": false,
      "description": "URL for support."
    },
    "IconSourceFile": {
      "type": "path",
      "required": false,
      "description": "Path to the bundle icon."
    },
    "SplashScreenSourceFile": {
      "type": "path",
      "required": false,
      "description": "Path to the splash screen bitmap."
    }
  },
  "examples": [
    {
      "description": "Basic bundle definition",
      "code": "<Bundle Name=\"My Application\" Version=\"1.0.0\" Manufacturer=\"My Company\" UpgradeCode=\"PUT-GUID-HERE\">\n  <BootstrapperApplicationRef Id=\"WixStandardBootstrapperApplication.RtfLicense\" />\n  <Chain>\n    <MsiPackage SourceFile=\"product.msi\" />\n  </Chain>\n</Bundle>"
    }
  ]
}
