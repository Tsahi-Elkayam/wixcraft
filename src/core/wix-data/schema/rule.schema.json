{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wixcraft.dev/schemas/rule.schema.json",
  "title": "WiX Lint Rules",
  "description": "Schema for wix-lint rule definition files",
  "type": "object",
  "required": ["rules"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "version": {
      "type": "string",
      "description": "Schema version for this rules file (semver format)",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "default": "1.0.0"
    },
    "rules": {
      "type": "array",
      "description": "List of lint rules",
      "items": {
        "$ref": "#/definitions/Rule"
      }
    }
  },
  "definitions": {
    "Rule": {
      "type": "object",
      "required": ["id", "name", "description", "severity", "element", "condition", "message"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique rule identifier (kebab-case)",
          "pattern": "^[a-z][a-z0-9-]*$"
        },
        "name": {
          "type": "string",
          "description": "Human-readable rule name"
        },
        "description": {
          "type": "string",
          "description": "Detailed explanation of what the rule checks"
        },
        "severity": {
          "type": "string",
          "enum": ["error", "warning", "info"],
          "description": "Default severity level"
        },
        "element": {
          "type": "string",
          "description": "WiX element type this rule applies to"
        },
        "condition": {
          "type": "string",
          "description": "JavaScript-like condition expression that triggers the rule when true"
        },
        "message": {
          "type": "string",
          "description": "Message shown when rule triggers. Supports {{attributes.Name}} placeholders."
        },
        "fix": {
          "$ref": "#/definitions/Fix",
          "description": "Optional auto-fix suggestion"
        },
        "since": {
          "type": "string",
          "description": "Version when this rule was added (semver format)",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "deprecated": {
          "type": "boolean",
          "description": "Whether this rule is deprecated",
          "default": false
        },
        "deprecatedMessage": {
          "type": "string",
          "description": "Message explaining why the rule is deprecated and what to use instead"
        },
        "replacedBy": {
          "type": "string",
          "description": "Rule ID that replaces this deprecated rule"
        }
      }
    },
    "Fix": {
      "type": "object",
      "required": ["action"],
      "properties": {
        "action": {
          "type": "string",
          "enum": ["addAttribute", "removeAttribute", "changeValue", "addElement", "removeElement"],
          "description": "Type of fix to apply"
        },
        "attribute": {
          "type": "string",
          "description": "Attribute name for attribute-related fixes"
        },
        "value": {
          "type": "string",
          "description": "New value to set"
        }
      }
    }
  }
}
