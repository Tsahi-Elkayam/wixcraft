{
  "$schema": "../schema/types.schema.json",
  "types": {
    "identifier": {
      "description": "A valid WiX identifier (letters, digits, underscores, periods)",
      "pattern": "^[A-Za-z_][A-Za-z0-9_.]*$",
      "maxLength": 72
    },
    "guid": {
      "description": "A GUID in standard format or '*' for auto-generation",
      "pattern": "^(\\*|[0-9A-Fa-f]{8}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{12})$",
      "examples": ["*", "12345678-1234-1234-1234-123456789ABC"]
    },
    "yesno": {
      "description": "Boolean value as yes or no",
      "enum": ["yes", "no"]
    },
    "integer": {
      "description": "An integer value",
      "pattern": "^-?[0-9]+$"
    },
    "string": {
      "description": "Any string value"
    },
    "path": {
      "description": "A file or directory path",
      "examples": ["bin\\app.exe", "$(var.SourceDir)\\file.txt"]
    },
    "filename": {
      "description": "A valid filename (no path separators)",
      "pattern": "^[^\\\\/:*?\"<>|]+$",
      "maxLength": 255
    },
    "version": {
      "description": "A version number in major.minor.patch.build format",
      "pattern": "^[0-9]+(\\.[0-9]+){0,3}$",
      "examples": ["1.0", "1.0.0", "1.0.0.0"]
    },
    "lcid": {
      "description": "A locale identifier (decimal)",
      "pattern": "^[0-9]+$",
      "examples": ["1033", "1041"]
    }
  }
}
